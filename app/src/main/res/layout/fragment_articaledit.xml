<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="发布文章"
        android:textColor="#fff"
        android:textSize="15dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_taef"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <EditText
                    android:id="@+id/etUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:background="@drawable/bg_artical_copy"
                    android:drawableLeft="@drawable/ic_artical_copy"
                    android:drawablePadding="12dp"
                    android:hint="请复制您的文章链接粘贴到此处"
                    android:paddingLeft="14dp"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/ivClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_pageedit_close" />
            </FrameLayout>


            <TextView
                android:id="@+id/tvMuzhiChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:background="@drawable/bg_artical_edit"
                android:gravity="center"
                android:text="拇指秒变"
                android:textColor="#fff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMatrial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_material"
                    android:drawableLeft="@drawable/ic_material"
                    android:drawablePadding="9dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="39dp"
                    android:text="素材库" />

                <TextView
                    android:id="@+id/tvMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bg_material"
                    android:drawableLeft="@drawable/ic_mode"
                    android:drawablePadding="9dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="39dp"
                    android:text="我的模板" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginTop="10dp">

                <WebView
                    android:id="@+id/wvVedio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></WebView>
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="这是一个什么样的传奇？点击视频观赏"
                android:textColor="@color/gray" />

            <FrameLayout
                android:id="@+id/flytBase"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="基本操作---新手教程"
                    android:textColor="#222"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/ic_mw_back" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grayLine" />

            <FrameLayout
                android:id="@+id/flytAd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="广告模板制作----新手教程  "
                    android:textColor="#222"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/ic_mw_back" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grayLine" />

            <FrameLayout
                android:id="@+id/flytCard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="名片设置---新手教程"
                    android:textColor="#222"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/ic_mw_back" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grayLine" />

            <FrameLayout
                android:id="@+id/flytWin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="如何推广赚钱---教程"
                    android:textColor="#222"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/ic_mw_back" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grayLine" />

            <FrameLayout
                android:id="@+id/flytCreator"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="创始人谈拇指推---视频"
                    android:textColor="#222"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/ic_mw_back" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>