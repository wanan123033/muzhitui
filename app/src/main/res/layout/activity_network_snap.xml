<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_white">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white">
    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="top"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:hint="请将网页地址粘贴到这里..."
        android:textSize="15sp"
        android:background="@drawable/shape_border_blue_bg"
        android:inputType="textMultiLine"
        android:textColor="#A8A8A8"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/btn_snap"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:textColor="@color/white"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="11dp"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/shape_btn_blue_bg"
        android:text="下一步 >>"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="1、  复制网页地址"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:text="在微信、浏览器、QQ浏览器等APP中复制需要截图的网页地址。"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="2、  粘贴网址，下一步"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:text="将网页地址粘贴在上面的输入框内，然后点击按钮进入下一步。"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="3、  一键截图网页长图"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:text="在打开的网页中，点击底部“获取网页截图”，即可网页生成为一张长图。"/>

</LinearLayout>
    <base.view.DragView
        android:id="@+id/dragview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#00000000"/>
</RelativeLayout>