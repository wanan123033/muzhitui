<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:textColor="#fff">

        <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/ivContactsHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:src="@drawable/ic_qq" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:src="@mipmap/ic_head_whitebg" />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.2">

                    <TextView
                        android:id="@+id/tvCntactsName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|bottom"
                        android:gravity="bottom|left"
                        android:text="adddd "
                        android:textColor="#333333"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/tvCntactsnianfei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@id/tvCntactsName"
                        android:paddingLeft="5dp"
                        android:src="@mipmap/ic_nainfei"
                        android:visibility="gone"

                        />

                    <ImageView
                        android:id="@+id/tvCntactszhongshen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@id/tvCntactsName"
                        android:paddingLeft="5dp"
                        android:src="@mipmap/ic_zhongshen"
                        android:visibility="gone"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.0dp"

                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvCntactsAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:gravity="top|left"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:text="adddd "
                        android:textColor="#999999"
                        android:textSize="11sp" />
                </RelativeLayout>

            </LinearLayout>
            <!-- <TextView
                 android:id="@+id/tvCntactsName"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_alignParentLeft="true"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:text="马云"
                 android:textColor="#333333"
                 android:textSize="25px"/>-->
            <!--//1 好友, 2 请求添加, 3 请求被添加, 4 请求被拒绝, 5 我被对方删除-->
            <TextView
                android:id="@+id/ivContactsInAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="18dp"
                android:text="已添加"
                android:textColor="@color/gray_index"
                android:textSize="10sp"

                />

            <TextView
                android:id="@+id/ivContactsWaite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"

                android:text="等待验证"
                android:textColor="@color/gray_index"
                android:textSize="10sp"

                />

            <ImageView
                android:id="@+id/ivContactsAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:src="@mipmap/ic_add" />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fff"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="65dp"
            android:background="@color/grayLine" />
    </LinearLayout>
    </LinearLayout>