<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/red_index"
              android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:background="#1d1a1a"
                android:orientation="horizontal"
                >


                <RelativeLayout
                    android:id="@+id/rlSeeFBack"
                    android:layout_width="0.0dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"

                    android:layout_weight="0.2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/backicon"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivSeeFHead"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_qq"/>


                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"


                        >



                        <TextView
                            android:id="@+id/tvSeeFAddName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="马化腾"
                            android:textColor="#fff"
                            android:textSize="13sp"/>


                        <ImageView
                            android:id="@+id/ivSex"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_nan"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >



                        <TextView

                            android:id="@+id/tvcity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:gravity="center"
                            android:maxLines="1"
                            android:text="广东.深圳"
                            android:textColor="#fff"
                            android:textSize="13sp"/>


                        <ImageView
                            android:id="@+id/ivMemState"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"



                            android:layout_marginLeft="5dp"
                            />

                        <TextView
                            android:id="@+id/tvMemState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="未加入会员"
                            android:textColor="@color/yellow"
                            android:textSize="12sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSeeFSendMessage"
                        android:layout_width="160dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center"

                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_btn_green_bg"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"

                            android:gravity="center"

                            android:text="发消息"

                            android:textColor="@color/green_new"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <View
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"/>

                    <LinearLayout
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivQrcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"


                            android:src="@mipmap/ic_erweima"
                            />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:layout_marginLeft="12dp"
                android:background="@color/grayLine" />
            <LinearLayout
                android:id="@+id/ll_dynamic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <TextView

                    android:layout_width="60dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="center_vertical"

                    android:gravity="center|left"
                    android:text="动态空间"
                    android:textColor="@color/black_index"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvDynamic"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center|right"
                    android:text="点击进入动态空间"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/gray_orange"
                    android:textSize="14sp"
                    />


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/ic_mw_back"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="18px"
                android:layout_marginLeft="12dp"
                android:background="@color/grayLine" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="75dp"
                    android:background="@color/grayLine"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <TextView

                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center|left"
                    android:text="姓名"
                    android:textColor="@color/black_index"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvSeeFInfoName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="13dp"
                    android:gravity="center|right"


                    android:textColor="@color/gray_orange"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="75dp"
                    android:background="@color/grayLine"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"


                    android:gravity="center|left"
                    android:text="拇指ID"
                    android:textColor="@color/black_index"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvSeeFId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="13dp"
                    android:gravity="center|right"


                    android:textColor="@color/gray_orange"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="75dp"
                    android:background="@color/grayLine"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wx"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <TextView


                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="12sp"
                    android:gravity="center|left"
                    android:text="微信号"
                    android:textColor="@color/black_index"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvSeeFwxid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="13dp"
                    android:gravity="center|right"


                    android:textColor="@color/gray_orange"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="75dp"
                    android:background="@color/grayLine"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_callphone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"

                    android:drawablePadding="12sp"
                    android:gravity="center|left"
                    android:text="手机号"
                    android:textColor="@color/black_index"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvSeeFPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="13dp"
                    android:gravity="center|right"


                    android:textColor="@color/gray_orange"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="75dp"
                    android:background="@color/grayLine"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"


                    android:gravity="center|left"
                    android:text="我的介绍"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/black_index"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvSeeFProduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="center|left"
                    android:lineSpacingExtra="5dp"


                    android:textColor="@color/gray_orange"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#fff"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"

                    android:background="@color/grayLine"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSeeOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/flSeeFReport"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="举报"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_mw_back"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="12dp"
                        android:background="@color/grayLine"/>
                </LinearLayout>

                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:paddingLeft="12sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:gravity="center"
                        android:text="拉黑"
                        android:textColor="@color/black_index"
                        android:textSize="12sp"/>

                    <ToggleButton
                        android:id="@+id/tbSeeFPullBlack"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"

                        android:background="@android:color/transparent"
                        android:button="@drawable/ios7_btn"

                        android:text=""
                        android:textOff=""
                        android:textOn=""/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"

                        android:background="@color/grayLine"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnSeeFDeleteF"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="40px"
                    android:background="@drawable/selector_delete_btn"
                    android:text="删除好友"
                    android:layout_marginBottom="30dp"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>