<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:background="@color/red_index">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:id="@+id/materialBack"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/backicon"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center|center_vertical"
                android:text="添加好友"
                android:textColor="@color/white"

                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvScAddF"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="扫码加好友"
                android:layout_marginRight="10dp"
                android:textColor="@color/yellow"
                android:textSize="13sp"/>


        </RelativeLayout>

        <TextView

            android:id="@+id/tvAddfriendsId"
            android:layout_width="match_parent"

            android:layout_height="90px"
            android:layout_marginTop="40px"
            android:background="#fff"
            android:drawableLeft="@mipmap/ic_seach"
            android:drawablePadding="20px"
            android:focusableInTouchMode="false"
            android:gravity="center|left"
            android:hint="输入手机号/拇指ID"
            android:paddingLeft="20px"
            android:textColor="#333333"
            android:textSize="30px"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_balck_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"

                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/ivAddfriendsHead"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_qq"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_head_black"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvAddfriendsNameInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Simone (ID:148004)"
                    android:textColor="#fff"
                    android:textSize="32px"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tvAddFriendInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="扫一扫上面的二维码， 加为好友"
                        android:textColor="#fff"
                        android:textSize="26px"/>

                    <ImageView
                        android:id="@+id/ivAddfriendsQRcode"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_alignBottom="@id/tvAddFriendInfo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="30dp"

                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>