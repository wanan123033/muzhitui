<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/rel_root"
    android:layout_height="100dp">
    <RelativeLayout
        android:id="@+id/rel_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/play"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_videoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rel_img"
        android:layout_alignTop="@id/rel_img"
        android:layout_marginLeft="10dp"
        android:text="名字"/>
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_toRightOf="@id/rel_img"
        android:layout_alignBottom="@id/rel_img"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="10dp" />
    <TextView
        android:id="@+id/tv_videoSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progressBar1"
        android:layout_alignLeft="@id/progressBar1"
        android:text="1M/6M"/>
    <TextView
        android:id="@+id/tv_video_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progressBar1"
        android:layout_alignRight="@id/progressBar1"
        android:text="50%"/>
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/iv_videodel_icon"/>
    <ImageView
        android:id="@+id/iv_zf"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="40dp"
        android:background="@mipmap/iv_share"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/background" />
</RelativeLayout>