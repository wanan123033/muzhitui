<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_add">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/tv_add_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_add_cancel"
            android:paddingBottom="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0.0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_add_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:layout_marginBottom="100dp"
                    android:layout_centerInParent="true"
                    android:text="动态发布"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:drawableTop="@mipmap/iv_dynamic_add"
                    android:textColor="@color/gray_white"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0.0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_add_origial_articles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:drawablePadding="12dp"
                    android:layout_marginBottom="100dp"
                    android:layout_centerInParent="true"
                    android:text="制作文章"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:drawableTop="@mipmap/iv_riginal_articles"
                    android:textColor="@color/gray_white"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0.0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_add_humb_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:layout_marginBottom="100dp"
                    android:layout_centerInParent="true"
                    android:text="拇指秒变"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:drawableTop="@mipmap/iv_thumb_change"
                    android:textColor="@color/gray_white"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>