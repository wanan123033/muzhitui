<?xml version="1.0" encoding="utf-8"?>
<net.robinx.lib.blur.widget.BlurMaskRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blur_mask_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/tv_add_cancel"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_etitartcle_delete"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_thumb_change"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/iv_thumb_change"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="3dp"
                android:textSize="10.5sp"
                android:text="拇指秒变"/>

        </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_origial_articles"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/iv_wenzhangzhizuo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            android:textSize="10.5sp"
            android:text="制作文章"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_add_dynamic"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/iv_dynamic_posted"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            android:textSize="10.5sp"
            android:text="动态发布"/>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sqdl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignTop="@id/ll_origial_articles">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/iv_dai"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="申请代理"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</net.robinx.lib.blur.widget.BlurMaskRelativeLayout>