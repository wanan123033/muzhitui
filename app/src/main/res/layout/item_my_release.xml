<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_topic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@id/iv_topic"
        android:layout_toRightOf="@id/iv_topic"
        android:maxLines="1"
        android:textSize="14sp"
        android:text="名称"/>
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:textColor="@color/gray"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:maxLines="1"
        android:text="位置"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_user"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:text="人数：200人"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/tv_xiugai"
        android:layout_width="50dp"
        android:gravity="right|center_vertical"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:textColor="#D9A569"
        android:text="修改"/>
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="right|bottom"
        android:paddingBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="10dp"
        android:textColor="#FF5F5F"
        android:text="删除" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EDEDF1"
        android:layout_alignLeft="@id/iv_topic"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>