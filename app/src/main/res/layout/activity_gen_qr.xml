<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:id="@+id/ll_network"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/shape_btn_white_bg">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_fire_select"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:text="网址二维码"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_text"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/shape_btn_white_bg">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_mw_select"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:text="文字二维码"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mpll"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/shape_btn_white_bg">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_my_select"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:text="名片二维码"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_border_blue_bg"
        android:padding="1dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_net_content"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:hint="请输入您要生成二维码的网址..."
            android:gravity="top"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:visibility="visible"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:textColor="#A8A8A8"
            android:background="@color/white"/>
        <EditText
            android:id="@+id/et_wz_content"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:hint="请输入您要生成二维码的文字内容...(限200字以内)"
            android:gravity="top"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:visibility="gone"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:textColor="#A8A8A8"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/ll_mp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="3dp"
            android:background="@drawable/shape_btn_white_bg">
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:singleLine="true"
                android:padding="10dp"
                android:background="@color/white"
                android:textColor="#A8A8A8"
                android:textSize="15sp"
                android:hint="姓名"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_white"/>
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:singleLine="true"
                android:padding="10dp"
                android:background="@color/white"
                android:textColor="#A8A8A8"
                android:textSize="15sp"
                android:hint="电话"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_white"/>
            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="#A8A8A8"
                android:padding="10dp"
                android:textSize="15sp"
                android:hint="地址"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_white"/>
            <EditText
                android:id="@+id/et_company"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:singleLine="true"
                android:padding="10dp"
                android:background="@color/white"
                android:textColor="#A8A8A8"
                android:textSize="15sp"
                android:hint="公司"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_genQr"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:textColor="@color/white"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="21dp"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/shape_btn_bg"
        android:text="马上生成"/>
</LinearLayout>