<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/flytHead"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="4dp"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="头像"
                android:textColor="#222"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/ivHead"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="30dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_mw_back"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/grayLine"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/flytName"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="名字"
                android:textColor="#222"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="25dp"

                android:gravity="center"

                android:textColor="@color/gray_index"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_mw_back"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/grayLine"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/flPersonalInfoId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="拇指ID"
                android:textColor="@color/black_index"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tvPersonalInfoId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="25dp"

                android:gravity="center"

                android:textColor="@color/gray_index"
                android:textSize="12dp"
                />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/grayLine"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/flPersonalInfoWXid"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="微信号"
                android:textColor="@color/black_index"
                android:textSize="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_mw_back"/>

            <TextView
                android:id="@+id/tvPersonalInfoWXid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="26dp"

                android:gravity="center"

                android:textColor="@color/gray_index"
                android:textSize="12sp"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/grayLine"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/flPersonalInfoPhone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/black_index"
                android:textSize="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_mw_back"/>

            <TextView
                android:id="@+id/tvPersonalInfoPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="26dp"

                android:gravity="center"

                android:textColor="@color/gray_index"
                android:textSize="12sp"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/grayLine"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/flPersonalInfoQR"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:gravity="center"
                android:text="我的二维码"
                android:textColor="@color/black_index"
                android:textSize="12dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_mw_back"/>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                android:src="@mipmap/ic_qrcode"
                android:text="1"
                android:textColor="#fff"
                android:textSize="7dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flPersonalInfoSex"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="性别"
                android:textColor="@color/black_index"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvPersonalInfoSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="26dp"

                android:gravity="center"

                android:textColor="@color/gray_index"
                android:textSize="12sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_mw_back"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/grayLine"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/flPersonalInfoAddress"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="地区"
                android:textColor="@color/black_index"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvPersonalInfoAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="26dp"

                android:gravity="center"

                android:textColor="@color/gray_index"
                android:textSize="12sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_mw_back"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/grayLine"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/flPersonalInfoProduce"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#fff"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="我的介绍"
                android:textColor="@color/black_index"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvPersonalInfoProduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="26dp"
                android:gravity="center|left"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:paddingLeft="50dp"
                android:textColor="@color/gray_index"
                android:textSize="12sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_mw_back"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>