<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red_index"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="15px">

        <ImageView
            android:id="@+id/ivPublishedGridaAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_editarticle_add" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPublishedGridaTool"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="191dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/shape_white_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"


            >

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvPublishedGridaFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/ic_etitartcle_font"
                    android:gravity="center"
                    android:text="文字"
                    android:textColor="@color/gray"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvPublishedGridaImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/ic_etitartcle_image"
                    android:gravity="center"
                    android:text="图文"
                    android:textColor="@color/gray"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvPublishedGridaVodie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/ic_etitartcle_vedio"
                    android:gravity="center"
                    android:text="视频"
                    android:textColor="@color/gray"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvPublishedGridaMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/ic_etitartcle_mode"
                    android:gravity="center"
                    android:text="模板"
                    android:textColor="@color/gray"
                    android:textSize="24px" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llMainItem"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_white_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPublishedGridaDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:src="@mipmap/ic_etitartcle_delete" />

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"

            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/item_grida_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"


                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ivVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"

                android:src="@drawable/ic_play" />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ivPublishedGridaUp"
                    android:layout_width="match_parent"
                    android:layout_height="0.0dp"
                    android:layout_weight="1"
                    android:padding="10px">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:src="@mipmap/ic_etitartcle_up" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ivPublishedGridaDown"
                    android:layout_width="match_parent"
                    android:layout_height="0.0dp"
                    android:layout_weight="1"
                    android:padding="10px">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/ic_etitartcle_down" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvPublishedGridaText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:hint="点击添加文字"
                android:maxLines="5"

                android:textColor="#333333"
                android:lineSpacingExtra="2dp"
                android:textColorHint="@color/gray"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>