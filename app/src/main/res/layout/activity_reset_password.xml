<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="39dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etResetPwdPhone"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:maxLength="11"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_re"
                android:textSize="12sp" />

            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/gray_re" />


            <TextView
                android:id="@+id/btnResetPwdCode"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:text="发送验证码"
                android:textColor="@color/gray_re"
                android:textSize="12sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_re" />

        <EditText
            android:id="@+id/etResetPwdCode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
android:maxLength="4"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_re"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_re" />

        <EditText
            android:id="@+id/etResetPwdNew"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_re"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_re" />

        <TextView
            android:id="@+id/btnResetPwdEnsure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="56dp"
            android:background="@drawable/selector_register_btn"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/gray_white"
            android:textSize="12sp" />
    </LinearLayout>




</LinearLayout>