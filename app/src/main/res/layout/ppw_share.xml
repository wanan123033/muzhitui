<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="232dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_ppw_buy"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_mw_cloase" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="分享"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:divider="@drawable/shape_divider_invited"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/ivWx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_weixin"
                android:gravity="center_horizontal"
                android:text="微信"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/ivWxP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_pengyouquan"
                android:gravity="center_horizontal"
                android:text="朋友圈"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/ivQq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_qq"
                android:gravity="center_horizontal"
                android:text="QQ"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/ivQqZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_qqzone"
                android:gravity="center_horizontal"
                android:text="QQ空间"
                android:textColor="#fff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:divider="@drawable/shape_divider_invited"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/ivSina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_sina"
                android:gravity="center_horizontal"
                android:text="新浪微博"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/ivA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_a"
                android:gravity="center_horizontal"
                android:text="复制链接"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/ivMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_more"
                android:gravity="center_horizontal"
                android:text="其他"
                android:textColor="#fff"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>