<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/red_index"
              android:orientation="vertical"
              android:id="@+id/llChatInfo"
    >


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"


            android:gravity="center"
            android:text="置顶消息"
            android:textColor="@color/black_index"
            android:textSize="12sp"/>
        <ToggleButton
            android:id="@+id/tbTopChatInfo"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:background="@android:color/transparent"
            android:button="@drawable/ios7_btn"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn="" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fff"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/grayLine"/>
    </LinearLayout>


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:gravity="center"
            android:text="消息免打扰"
            android:textColor="@color/black_index"
            android:textSize="12sp"/>

        <ToggleButton
            android:id="@+id/tbNewInfoNotice"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"

            android:background="@android:color/transparent"
            android:button="@drawable/ios7_btn"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn="" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/tvChatUserInfo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"


            android:gravity="center"
            android:text="用户信息"
            android:textColor="@color/black_index"
            android:textSize="12sp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_mw_back"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fff"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"

            android:background="@color/grayLine"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/flEmptyInfo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="清空聊天记录"
            android:textColor="@color/black_index"
            android:textSize="12sp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_mw_back"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fff"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"

            android:background="@color/grayLine"/>
    </LinearLayout>


</LinearLayout>