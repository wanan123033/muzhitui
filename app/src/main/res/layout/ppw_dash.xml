<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="225dp">


    <TextView
        android:id="@+id/tvDashDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:text="查看提现记录"
        android:textColor="@color/blue"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_ppw_buy"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mw_cloase" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="您的余额"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/etMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_ppw_dash_money"
            android:digits="1234567890."
            android:inputType="number"
            android:maxLength="8"
            android:paddingLeft="80dp"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/etTele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_ppw_dash_tele"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="80dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="5dp"
            android:text="满100元即可提现"
            android:textColor="@color/yellow"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/dash_enable"
            android:enabled="true" />
    </LinearLayout>
</FrameLayout>