<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/flyt_gen_qr"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/iv_gen_qr"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:background="@mipmap/iv_gen_qr_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@id/iv_gen_qr"
            android:layout_toRightOf="@id/iv_gen_qr"
            android:gravity="center"
            android:textSize="15sp"
            android:text="生成二维码"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_gen_qr"
            android:layout_marginRight="9dp"
            android:src="@drawable/ic_mw_back"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_white"/>
    <RelativeLayout
        android:id="@+id/flyt_beautify_qr"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/iv_beautify_qr"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/iv_bea_qr_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@id/iv_beautify_qr"
            android:layout_toRightOf="@id/iv_beautify_qr"
            android:gravity="center"
            android:textSize="15sp"
            android:text="美化二维码"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_beautify_qr"
            android:layout_marginRight="9dp"
            android:src="@drawable/ic_mw_back"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_white"/>
    <RelativeLayout
        android:id="@+id/flyt_caram_qr"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/iv_caram_qr"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/iv_scan_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@id/iv_caram_qr"
            android:layout_toRightOf="@id/iv_caram_qr"
            android:gravity="center"
            android:textSize="15sp"
            android:text="扫一扫"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_caram_qr"
            android:layout_marginRight="9dp"
            android:src="@drawable/ic_mw_back"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_white"/>
    <RelativeLayout
        android:id="@+id/flyt_qr"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/iv_my_qr"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/iv_identify_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@id/iv_my_qr"
            android:layout_toRightOf="@id/iv_my_qr"
            android:gravity="center"
            android:textSize="15sp"
            android:text="识别图中的二维码"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_my_qr"
            android:layout_marginRight="9dp"
            android:src="@drawable/ic_mw_back"/>
    </RelativeLayout>
</LinearLayout>
    <base.view.DragView
        android:id="@+id/dragview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#00000000"/>
</RelativeLayout>